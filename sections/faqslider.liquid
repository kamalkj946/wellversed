{% schema %}
{
  "name": "FAQ Section",
  "settings": [],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ",
      "settings": [
        {
          "type": "text",
          "id": "influencer_name",
          "label": "Influencer Name",
          "default": "John Doe"
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "This is an amazing product!"
        },
        {
          "type": "text",
          "id": "type_of_celebrity",
          "label": "Type of Celebrity",
          "default": "Actor"
        },
        {
          "type": "image_picker",
          "id": "profile_pic",
          "label": "Profile Pic"
        },
        {
          "type": "text",
          "id": "brand",
          "label": "Brand",
          "default": "Brand Name"
        },
        {
          "type": "select",
          "id": "rating",
          "label": "Rating",
          "options": [
            {
              "value": "1",
              "label": "1 Star"
            },
            {
              "value": "2",
              "label": "2 Stars"
            },
            {
              "value": "3",
              "label": "3 Stars"
            },
            {
              "value": "4",
              "label": "4 Stars"
            },
            {
              "value": "5",
              "label": "5 Stars"
            }
          ],
          "default": "5"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<link rel="stylesheet" d-href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
<link rel="stylesheet" d-href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" />

<div class="featured-collection__container">

  <h2 class="home-section--title">Testimonials</h2>
  <div class="faq-section owl-carousel owl-theme">
  {% for block in section.blocks %}

    <div class="faq_outer_box">
      <div class="faq_inner_box">
        <div>
          {% if block.settings.profile_pic %}
            <img src="{{ block.settings.profile_pic | img_url: 'medium' }}" alt="{{ block.settings.influencer_name }}">
          {% endif %}
        </div>
        <div class="faq_desc">
          <h3><b>{{ block.settings.influencer_name }}</b></h3>
          <p class="type_of_cele">{{ block.settings.type_of_celebrity }}</p>
          <p class="brand">{{ block.settings.brand }}</p>                    
          <p class="verified"><span><img src="https://cdn.shopify.com/s/files/1/0629/0387/7798/files/tick.png?v=1717567949"></span>Verified Customer</p>
          <p class="rating">
            <strong></strong> 
            {% assign rating = block.settings.rating | plus: 0 %}
            {% assign empty_stars = 5 | minus: rating %}
            {% for i in (1..rating) %}
              ★
            {% endfor %}
            {% for i in (1..empty_stars) %}
              ☆
            {% endfor %}
          </p>
        </div>
      </div>
      <div class="content_testimonial">
        <p>{{ block.settings.testimonial }}</p>
      </div>
    </div>

  {% endfor %}
</div>

</div>

<script type="lload" d-src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>

<script type="lload">
  $(document).ready(function(){
  setTimeout(function() {
    $(".faq-section").owlCarousel({
      loop: true,
      margin: 10,
      nav: false,
      dots: true,
      autoplay:true,
    autoplayTimeout:5000,
    autoplayHoverPause:true,
      responsive: {
        0: {
          items: 1,
        },
        600: {
          items: 2
        },
        1000: {
          items: 3
        }
      }
    });
  }, 2000);
  });
</script>

